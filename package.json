{
  "name": "blog-platform",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.29.3",
  "scripts": {
    "dev": "next dev",
    "dev:rc:on": "REACT_COMPILER=true next dev",
    "dev:rc:off": "REACT_COMPILER=false next dev",
    "build": "next build",
    "build:rc:on": "REACT_COMPILER=true next build",
    "build:rc:off": "REACT_COMPILER=false next build",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:ci": "eslint . --max-warnings 0",
    "ai-lint:check": "node scripts/ai-lint/check.mjs",
    "ai-lint:loop": "node scripts/ai-lint/loop.mjs",
    "mcp:bench": "node scripts/mcp-benchmark.mjs",
    "mcp:explain": "node scripts/mcp-explain.mjs",
    "e2e:install": "pnpm exec playwright install chromium",
    "e2e:setup": "pnpm exec playwright test tests/e2e/auth.setup.spec.ts --project=chromium --headed",
    "e2e": "pnpm exec playwright test tests/e2e/studio.spec.ts --project=chromium"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.2",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-slot": "^1.2.4",
    "@supabase/ssr": "^0.8.0",
    "@supabase/supabase-js": "^2.95.3",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.564.0",
    "mcp-handler": "^1.0.7",
    "mermaid": "^11.12.3",
    "next": "16.1.6",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "shiki": "^3.22.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "use-debounce": "^10.1.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20.19.33",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "babel-plugin-react-compiler": "^1.0.0",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "shadcn": "^3.8.4",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
